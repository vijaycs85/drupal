{
  "name": "vijaycs85/drupal-template",
  "type": "project",
  "description": "Drupal 8 template",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Vijaya Chandran Mani",
      "role": "author"
    }
  ],
  "require": {
    "php": "^7.3",
    "ext-openssl": "*",
    "composer/installers": "^1.7",
    "cweagans/composer-patches": "^1.6.5",
    "drupal/core-composer-scaffold": "^8.8",
    "drupal/core-recommended": "^8.8",
    "drupal/address": "^1.8",
    "drupal/admin_toolbar": "^2.2",
    "drupal/entity": "^1.0",
    "drupal/entity_browser": "^2.4",
    "drupal/field_group": "^3.0",
    "drush/drush": "^10.0.0",
    "oomphinc/composer-installers-extender": "^1.1 || ^2",
    "webflo/drupal-finder": "^1.0.0",
    "vlucas/phpdotenv": "^2.4",
    "webmozart/path-util": "^2.3",
    "zaporylie/composer-drupal-optimizations": "^1.0"
  },
  "conflict": {
    "drupal/drupal": "*"
  },
  "require-dev": {
    "brianium/paratest": "^2",
    "drupal/core-dev": "^8.8",
    "drupal/devel": "^2.1",
    "mglaman/phpstan-drupal": "^0.12.2",
    "phpstan/phpstan-deprecation-rules": "^0.12.2"
  },
  "config": {
    "preferred-install": {
      "drupal/*": "source",
      "*": "dist"
    },
    "sort-packages": true
  },
  "extra": {
    "composer-exit-on-patch-failure": true,
    "drupal-scaffold": {
      "locations": {
        "web-root": "web/"
      },
      "file-mapping": {
        "[web-root]/example.gitignore": false,
        "[web-root]/INSTALL.txt": false,
        "[web-root]/README.txt": false,
        "[web-root]/sites/README.txt": false,
        "[web-root]/modules/README.txt": false,
        "[web-root]/profiles/README.txt": false,
        "[web-root]/themes/README.txt": false,
        "[web-root]/sites/default/default.settings.php": {
          "mode": "replace",
          "path": "web/core/assets/scaffold/files/default.settings.php",
          "overwrite": false
        },
        "[web-root]/sites/default/default.services.yml": {
          "mode": "replace",
          "path": "web/core/assets/scaffold/files/default.services.yml",
          "overwrite": false
        }
      }
    },
    "installer-paths": {
      "web/core": [
        "type:drupal-core"
      ],
      "web/libraries/{$name}": [
        "type:drupal-library",
        "type:bower-asset",
        "type:npm-asset"
      ],
      "web/modules/contrib/{$name}": [
        "type:drupal-module"
      ],
      "web/profiles/contrib/{$name}": [
        "type:drupal-profile"
      ],
      "web/themes/contrib/{$name}": [
        "type:drupal-theme"
      ],
      "drush/Commands/{$name}": [
        "type:drupal-drush"
      ]
    },
    "installer-types": ["bower-asset", "npm-asset"],
    "patchLevel": {
      "drupal/core": "-p2"
    },
    "patches-file": "composer.patches.json"
  },
  "autoload": {
    "files": [
      "load.environment.php"
    ]
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    },
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "scripts": {
    "pre-autoload-dump": "Drupal\\Core\\Composer\\Composer::preAutoloadDump",
    "build": "drush -vvv si standard --db-url=mysql://root:root@127.0.0.1/drupal",
    "phpcs": "phpcs --standard=phpcs.xml --runtime-set installed_paths $($COMPOSER_BINARY config vendor-dir)/drupal/coder/coder_sniffer -p --",
    "phpcbf": "phpcbf --standard=phpcs.xml --runtime-set installed_paths $($COMPOSER_BINARY config vendor-dir)/drupal/coder/coder_sniffer -p --",
    "phpunit": "export SIMPLETEST_BASE_URL=http://d8; ./vendor/phpunit/phpunit/phpunit -c ./web/core/phpunit.xml.dist --verbose ./web/core/modules/color/"
  }
}
